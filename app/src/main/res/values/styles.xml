<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MedalCaseTheme">

    </style>

    <style name="MedalCaseTheme.GreyTitle">
        <item name="android:textColor">@color/dark_text</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@color/gray_background</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MedalCaseTheme.GreyTitle.Numbers" parent="MedalCaseTheme.GreyTitle">
        <item name="android:textColor">@color/light_text</item>
    </style>

    <style name="MedalCaseTheme.ToolBarTitle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MedalCaseTheme.MedalText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
        <item name="android:padding">0dp</item>
    </style>

</resources>